<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swype_layout"
    android:background="@color/colorPrimary"
    tools:context="ru.mozgovoy.oleg.exchangerate.ui.view.RateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinner_from"
            style="@style/AppTheme.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <Spinner
            android:id="@+id/spinner_to"
            style="@style/AppTheme.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button_convert" />

        <Button
            android:id="@+id/button_convert"
            style="@style/AppTheme.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_from"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_ripple"
            android:text="123" />

        <EditText
            android:id="@+id/edit_from"
            style="@style/AppTheme.Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/spinner_from"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:inputType="numberDecimal"
            android:text="123" />

        <TextView
            android:id="@+id/text_to"
            style="@style/AppTheme.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/spinner_to"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/button_convert"
            android:text="123" />

    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>